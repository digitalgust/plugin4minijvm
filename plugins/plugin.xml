            setPreIconColor("DIS_PLUGIN","ff000099")
        ret

        sub search()
        ret

        sub downloadPlugin(url)
            if(strlen(url)= 0)
               ret
            eif
            showMsg("Downloading...")
            downloadInstall(url,"PLUGIN_HOME.downCallback")
        ret

        sub downCallback(url,code,filepath)
            if(code = 0)
                showMsg("Downloaded and install success")
                ret
            eif
            showMsg("Download failed")
        ret

